mode "audio" {
  bindsym shift+plus exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +5% && $refresh_i3status
  bindsym minus exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -5% && $refresh_i3status
  bindsym 0 exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && $refresh_i3status
  bindsym Escape mode "default"
}
bindsym $mod+u exec --no-startup-id bash $HOME/.config/i3/reminder-audio.sh, mode "audio"
